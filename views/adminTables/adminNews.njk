{% include "../layout/header.njk" %}
<body >
    <section style=" min-height: 80vh;">

   
    <div class="container-fluid " style="font-size:1.5rem;">
        <div class="row">
                {% include "./adminLayout/adminHeader.njk" %}
        </div>
        <div class="row mt-4">
            <div class="col-md-2 ">
                {% include "./adminLayout/sidebar.njk" %}
            </div>
            <div class="col-md-10">
                    
                <div class="card card-body">
                       <div class="row ">
                            
                            <button class="btn btn-outline-info ml-4 mb-3" data-toggle="modal" data-target="#addNews"> <i class="fa fa-plus fa-lg fa-fw" aria-hidden="true" ></i> </button>
                       </div>
                       <div class="row mx-1">
                       
                            <table id="tableAdminNews" class="table table-bordered ">
                                    <thead class="thead  text-center align-content-center ">
                                      <tr>
                                        <th style="width: 21%"> Фото </th>
                                        <th style="width: 20%" >Заголовок новости</th>
                                        <th style="width: 50%" >Текст новости</th>
                                        <th style="width: 9%" >Дата</th>
                                        <th style="width: 9%" ></th>
                                      </tr>
                                    </thead>
                                    <tbody >
                                    {% for i in range(0,news.length) %}
                                      <tr>
                                        <td><img class="img-thumbnail" src="{{news[i].linkPicture}}" alt=""></td>
                                        <td > <input id="tdTitle{{news[i]._id}}" type="text" class="d-none" value="{{news[i].title}}"> {{news[i].title}} </td>
                                        <td > <input id="tdText{{news[i]._id}}" type="text" class="d-none" value="{{news[i].text}}">  {{news[i].text}}</td>
                                        <td >{{date[i]}}</td>
                                        <td>
                                          <form  action="/adminNewsDelete/" method="get">
                                          <input type="hidden" value="{{news[i]._id}}" name="idDelete"/>
                                          <button style="font-size:1.5rem" class="btn btn-outline-info" type="submit"  > <i class="fa fa-trash"></i> </button>
                                          </form>
                                          <form class="mt-4"  action="/NewsUpdate" method="post">
                                          <!-- <input id="{{news[i]._id}}" type="hidden" value="{{news[i]._id}}" name="btnUpdate"/> -->
                                          <button  onclick="NewsUpdate('{{news[i]._id}}')"  style="font-size:1.5rem" class="btn btn-outline-info" type="button" data-toggle="modal" data-target="#addNews" > <i class="fa fa-pencil"> </i> </button>
                                          </form>
                                        </td>
                                      </tr>
                                    {% endfor %}
                                    </tbody>
                                  </table>
                        </div>
                       
                              
                              
                </div>
            </div>
        </div>    
    </div>
</section>
    {% include "../layout/script.njk" %}
    <script>
      $(".active").removeClass('active')
       document.getElementById('aNews').setAttribute("class", "active list-group-item list-group-item-action")
</script>
</body>


<div style="font-size:1.5rem"  class="modal fade" id="addNews" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div style="font-size:1.5rem"  class="modal-dialog" role="document">
          <div style="font-size:1.5rem" class="modal-content">
            <div class="modal-header">
              <h4  class="modal-title" id="exampleModalLabel">Добавить новость</h4>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <form id="formId"  method="post" enctype="multipart/form-data">
                <div class="form-group">
                  <label for="recipient-name" class="col-form-label">Название новости</label>
                  <input style="font-size:1.5rem"  name="titleNews" type="text" class="form-control" id="recipient-name">
                </div>
                <div class="form-group">
                  <label for="message-text" class="col-form-label">Текст новости</label>
                  <textarea style="font-size:1.5rem"  name ="description" class="form-control" id="message-text"></textarea>
                </div>
                <div  class="form-group">
                      
                        <input name="image" type="file">
                        
                </div>
                <input name ="IDforSearch"  id="idNewsId" type="text" class ="d-none">
                <button id="subHidden" type="submit" class="d-none" ></button>
              </form>
            </div>
            <div  class="modal-footer">
              <button style="font-size:1.5rem" type="button" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
              <button  style="font-size:1.5rem" type="button"  onclick="sendSubNews()" class="btn btn-primary">Сохранить</button>
            </div>
          </div>
        </div>
      </div>