{% include "./layout/header.njk" %}

<body>
    {% include "./layout/nav.njk" %}

    {% include "./layout/script.njk" %}

    <section id="detail" class="pt-3 pb-3">
        <div class="container ">
                
            <div class="row card card-body ">
                   
                <div class="col-md-12">
                    <img class=" img-fluid" src="/{{courses.linkPicture}}" alt="фото новости">

                </div>
                <div class="col-md-12">
                    <h1  class="text-center slogan">{{courses.title}}</h1>
                    
                    <hr>
                    <p style="color:gray; font-size:1.3rem"><i class="fa fa-user" aria-hidden="true"></i> Преподаватель: {{teacher.name}} </p>
                    <p style="color:gray; font-size:1.3rem"><i class="fa fa-money" aria-hidden="true"></i> {{courses.price}} </p>
                    <p style="color:gray; font-size:1.3rem"><i class="fa fa-calendar" aria-hidden="true"></i> {{courses.duration}} </p>
                    <hr>
                    <p style="font-size: 17px; white-space: pre-line">
                        {{courses.text}}
                    </p>
                </div>
            </div>



            
        </div>
    </section>

    <script>
        $(".active").removeClass('active')
        document.getElementById('LiNews').setAttribute("class", "active")
    </script>
</body>
{% include "./layout/footer.njk" %}