{% include "./layout/header.njk" %}

<body>
{% include "./layout/nav.njk" %}
    <section class="d-none d-xl-none d-lg-block  d-md-block" id="main">

        <div class=" card ">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                {% for sa_ in slider_active %}
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                {% endfor %}
                {% for s_ in slider %}
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                {% endfor %}

                </ol>
                <div class="carousel-inner">
                    {% for sa in slider_active %}
                    <div class="carousel-item active ">
                        <img class="d-block w-100 img-fluid" src="{{sa.linkPicture}}"
                            alt="First slide" style="height:70vh">
                            <div class=" card carousel-caption d-none d-md-block" style="color: #000; opacity: 0.8;">
                                    <h5>{{sa.title}}</h5>
                                    <p>{{sa.text}}</p>
                            </div>
                    </div>
                    {% endfor %}
                    {% for s in slider %}
                    <div class="carousel-item">
                        <img class="d-block w-100 img-fluid" src="{{s.linkPicture}}"
                            alt="Second slide" style="height:70vh">
                            <div class=" card carousel-caption d-none d-md-block" style="color: #000; opacity: 0.8;">
                                    <h5>{{s.title}}</h5>
                                    <p>{{s.text}}</p>
                            </div>
                    </div>
                    {% endfor %}
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>


        <!--         
        <div class="main-header">

            <h1 class="slogan">Сфера  
            </h1>
            <p>  центр современного массажа </p>
         


        </div>
        <div class="main-arrow">
            <a href="#portfolio"></a>
