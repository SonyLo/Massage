    </section>



    <section class="mt-4 mb-3" id="about">
        <div class="container">
            <h2 class="portfolio-header d-xl-block d-block d-md-none mb-5 "> <span class="font-weight-bold">Сфера<span>  <br> <span class="font-weight-normal">школа современого массажа</span> </h2>
            
            <hr class="d-xl-block d-block d-md-none ">
            <h2 class="portfolio-header "> О нас</h2>
            <div class="row mt-5">
                {% for a in about %}
                <div class="col-md-6 text-center" style="font-size:30px">

                    <i style="color:#0375B3" class="{{a.linkIcon}}" aria-hidden="true"></i>
                    <p style="font-size:20px">{{a.description}}</p>


                </div>
                {% endfor %}
                
            </div>
            {# <div class="row text-center">
                <div class="col-md-12">
                    <button type="button" style="height:50px; width:150px; font-size: 20px" class="btn btn-outline-primary mb-3 mt-3">Подробнее</button>
                </div>
            </div> #}
        </div>
    </section>


    <section id="news">
            <div class="container">
                <h2 class="portfolio-header pt-5"> Новости </h2>
                <div class="row pt-5 pb-5 justify-content-center" >
                        <div class="col-md-12">
                                <div class="card-deck">
                                {% for i in range(0,news.length)  %}
                                        <div class="card">
                                          <img src="{{news[i].linkPicture}}" class="card-img-top" alt="{{n.title}}">
                                          <div class="card-body">
                                            <h4 class="card-title">{{news[i].title}}</h5>
                                            <p style="font-size:15px" class="card-text textrowcount">{{news[i].text}}</p>
                                            <p style="font-size:12px" class="card-text"><small class="text-muted">{{date[i]}}</small></p>
                                          </div>
                                        </div>
                                        {% endfor %}
                                      </div>
                        </div>
                   
                </div>
                <div class="row text-center ">
                        <div class="col-md-12">
                        <a href="/news/story">
                            <button type="button" style="height:50px; width:150px; font-size: 20px" class="btn btn-primary mb-4 ">Все новости</button>
                        </a>
                        </div>
                    </div>
            </div>
        </section>

        <section class="mt-4 mb-3" id="course">
                <div class="container">
                    <h2 class="portfolio-header"> Курсы</h2>
                    <div class="row mt-5">
        
                        <div class="col-md-6 text-center" style="font-size:30px">
        
                                <i style="color:#0375B3" class="{{course_new.linkIcon}}" aria-hidden="true"></i>
                            <p>{{course_new.title}}</p>
                            
                            <p class="text-justify" style="font-size:20px">{{course_new.description}}</p>

        
                            <div class="col-md-12">
                                 <a href="/courses/new">
                                    <button type="button" style="height:50px; width:150px; font-size: 20px" class="btn btn-outline-primary mb-3 mt-3">Подробнее</button>

                                 </a> 
                            </div>
                        </div>
                        <div class="col-md-6 text-center" style="font-size:30px">
                            
                            <i style="color:#870E75" class="{{course_old.linkIcon}}" aria-hidden="true"></i>
                            <p>{{course_old.title}}</p>
                            <p class="text-justify" style="font-size:20px">{{course_old.description}}</p>
                            <div class="col-md-12">
                                <a href="/courses/old">
                                    <button type="button" style="height:50px; width:150px; font-size: 20px" class="btn btn-outline-primary mb-3 mt-3">Подробнее</button>

                                </a>
                            </div>
                        </div>
                    </div>
                    
                </div>
            </section>

    <section id="teacher">
        <div class="container ">
            <h2 class="pt-5 portfolio-header"> Наши преподаватели</h2>

            <div class="row mt-4 justify-content-center">
                {% for t in teachers %}
                <div class="col-md-4 mt-4">
                    <div class="card card-body">
                        <img src="{{t.linkPicture}}" alt="Avatar" style="width:100%">
                        <div class="containerrr">
                            <h4><b>{{t.name}}</b></h4>
                            <p class="textrowcount">{{t.description}}</p>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>

            
           
            <div class="row text-center mt-5">
                <div class="col-md-12">
                    <a href="/teachers">
                        <button type="button" style="height:50px; width:150px; font-size: 20px" class="btn btn-primary mb-5 mt-3">Подробнее</button>
                    </a>
                   
                </div>
            </div>
        </div>

    </section>

<section id="comments">
    <div class="container">
        <div class="row">
            <div class="col-md-12" id="comment_block">
                    <h2 class="pt-5 pb-5 portfolio-header"> Отзывы</h2>
                    {% for c in comments %}
                    <div class="card mb-4">
                            <div class="card-body">
                                <div class="row">
                                    <div class=" col-md-4  ">
                                        <img src="{{c.linkPicture}}" alt="" class="commentImg">
                                    </div>
                                    <div class=" col-md-8">
                                        <p style="font-size:2.5rem" class="font-weight-bold">{{c.title}}</p>
                                       
                                        <p style="font-size:2rem">{{c.text}}</p>
                                    </div>                                  
                                </div>
                            </div>
                    </div>
                    {% endfor %}
                    
                   
                    
                    

            </div>
        </div>
    {% if show_btn %}
        <div class="row" id="show_com_btn">
            <div class="col-md-12 text-center">
                <button id="show_comment" type="button" style="height:50px; width:150px; font-size: 20px" class="btn btn-outline-primary mb-3 mt-3 text-center">
                    Еще
                </button>   
            </div>
        </div>
        {% endif %}

        <div class="row card card-body mb-4 ml-1" >
            <div class="col-md-12">
                <div class="col-md-12">
                    <form id="commentFormId" action="/saveComment"  method="post" enctype="multipart/form-data">
                        <h2>Оставить отзыв</h2>
                        <div id="contact-form">        
                            <div class="controls">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="form_title">Заголовок отзыва</label>
                                            <input id="form_title" type="text" name="com_title" class="form-control" placeholder="Введите заголовок отзыва">
                                            
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="form_title" class="w-100">Фото отзыва</label>
                                            <input id="form_img" name="com_img" type="file">
                                            
                                        </div>
                                    </div>
                                </div>
                                    
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <textarea id="form_message" name="com_text" class="form-control" placeholder="Пожалуйста, оставьте отзыв" rows="4" required="" data-error="Пожалуйста, оставьте нам отзыв."></textarea>
                                            <div class="help-block with-errors"></div>
                                        </div>
                                        <div class="messages"></div>
                                    </div>          
                                    <div class="col-md-12 text-center">
                                        <input type="submit" name="btn_submit" id="button_comments" value="Отправить отзыв">
                                    </div>
                                </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>


    </div>
</section>

{% include "./layout/script.njk" %}

</body>
